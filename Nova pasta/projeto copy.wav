import speech_recognition as sr

def audio_para_texto(arquivo_audio):
    recognizer = sr.Recognizer()
    
    with sr.AudioFile(arquivo_audio) as source:
        audio = recognizer.record(source)
    
    try:
        texto = recognizer.recognize_google(audio, language='pt-BR')
        print("Texto reconhecido: " + texto)
    except sr.UnknownValueError:
        print("Não foi possível entender o áudio")
    except sr.RequestError as e:
        print(f"Erro ao requisitar resultados do Google Web Speech API; {e}")


audio_arquivo = 'caminho_para_seu_arquivo_audio.wav'  
audio_para_texto(audio_arquivo)
